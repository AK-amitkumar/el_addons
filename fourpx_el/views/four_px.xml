<?xml version="1.0"?>
<odoo>
    <act_window id="action_four_px_tree" name="4PX Config" res_model="four.px"
                view_mode="tree,form" />
    <menuitem id="menu_four_px_tree" action="action_four_px_tree" name="4PX Config"
              parent="stock.menu_stock_root"
              sequence="200"/>

    <record id="view_four_px_form" model="ir.ui.view">
        <field name="name">view.four.px.form</field>
        <field name="model">four.px</field>
        <field name="arch" type="xml">
            <form name="four.px" class="oe_form_configuration">
                <group>
                    <field name="name"/>
                    <field name="token"/>
                    <field name="order_api"/>
                    <field name="order_tool_api"/>

                </group>
            </form>
        </field>
    </record>

</odoo>
